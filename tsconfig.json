{
  "extends": "@shopify/typescript-configs/library",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "target": "ES5",
    "declarationDir": "types",
    "declarationMap": false,
    "jsx": "react-native",
    "strict": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "incremental": true,
    "noEmit": true,
    "noEmitHelpers": false,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "strictFunctionTypes": false
  },
  "include": ["**/src/**/*.tsx", "./config/typescript", "./src", "./tests"]
}
